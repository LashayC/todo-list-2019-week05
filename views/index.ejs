<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='css/style.css'>

    <title>Todolist</title>
</head>
<body>
    <section class="intro">
        <h1>Manifest</h1>
        <p class="font">Align your goals and self</p>
    </section>

    <section class="page"> 
        <h2>Enter your goals here:</h2>
        <form action="/todos" method="POST">
            <input id="todoInput" type="text" placeholder="Enter goal" name="item">
            <input type="hidden" name="checkedOff" value="no">
            <button id="submitBtn">Submit</button>
        </form>
    
        <ul id="todoList">
        <% for(var i=0; i<todos.length; i++) {%>
            <li>
            <span class="listItems"><%= todos[i].item %></span>
            <span class="hidden"><%= todos[i].checkedOff %></span>
            </li>
        <% } %>
        </ul>

        <!-- <p class="font">Goals Left:<span id="listCount">0</span></p> -->

        <button id="clearBtn">Clear All</button>
        <button id="clearCrossed">Clear Completed</button>
    </section>

    <script rel="javascript" src="/js/main.js"></script>
</body>
</html>
